/* pages/newCourseDetail/newCourseDetail.wxss */
view {
  font-size: 32rpx;
}

.page {
  display: block;
  margin: 0 45rpx;
}

.form-item {
  position: relative;
  display: flex;
  padding: 35rpx 0;
}

.form-item-other {
  flex-direction: column;
}

.form-item .item-lable {
  width: 30%;
}

.form-item .item-text {
  text-align: right;
  color: #999;
  position: absolute;
  right: 0px;
  font-weight: normal;
}

.bottom-textarea {
  width: 98%;
  margin-top: 0.6rem;
  border: 1px solid #f4f4f4;
}

.div-line {
  border-bottom: 1px solid #f4f4f4;
}

.close-page {
  display: flex;
  flex-direction: row-reverse;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 3rem;
  background: #f3f5f4;
}

.close-btn {
  position: relative;
  display: flex;
  bottom: -0.6rem;
  width: 4rem !important;
  height: 1.6rem;

  margin-right: 1rem;
}

.close-btn-img {
  position: absolute;
  margin-left: 0.2rem;
  width: 1.5rem;
  height: 1.5rem;
  z-index: 10;
  bottom: -0.01rem;
}

.btn-txt {
  position: absolute;
  padding: 0;
  padding-right: 0.5rem;
  font-size: 32rpx;
  display: block;
  width: 100% !important;
  text-align: right;
  line-height: 1.5rem;
  font-weight: normal;
  border: 0.1rem solid #c5c5c5;
  border-radius: 0.5rem;
}

.other-lable {
  color: #999;
}