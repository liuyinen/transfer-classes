/* pages/adjustCourseDetail/adjustCourseDetail.wxss */
view {
  font-size: 32rpx;
}

.main {
  margin: 1rem 0.8rem;
}

.top-title {
  line-height: 34rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  text-align: center;
}

.form-content {
  margin-bottom: 3.5rem;
}

.select {
  position: relative;
  width: 60%;
  height: 1.5rem;
  background: #f3f4ef;
  color: #6f6f6f;
  border: 0.1rem solid #baccc3;
  border-radius: 0.5rem;
  padding: 0.1rem 0.5rem;
  line-height: 1.5rem;
}

.select-right {
  position: absolute;
  right: 0;
  top: 0;
  width: 2rem;
  background: #cadfd4;
  height: 1.7rem;
  border-top-right-radius: 0.4rem;
  border-bottom-right-radius: 0.4rem;
}

.select-right-img {
  position: absolute;
  width: 1.1rem;
  height: 1.1rem;
  top: 0.4rem;
  left: 0.5rem;
}

.form-item {
  display: flex;
  flex-flow: column;
}

.bottom-input,
.bottom-textarea {
  width: 90%;
  font-size: 32rpx;
  font-weight: 500;
}

.bottom-input {
  border-bottom: 2rpx solid #e3e3e3;
}

.bottom-textarea {
  border: 2rpx solid #e3e3e3;
}

.top {
  width: 100%;
  line-height: 120rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
}

.bottom {
  padding-top: 70rpx;
  height: 190rpx;
  overflow-y: hidden;
}

.save-btn {
  width: 100rpx;
  height: 90rpx;
  background: #09c063;
  border-radius: 6rpx;
  line-height: 55rpx;
  font-size: 32rpx;
  color: #ffffff;
}

.radio {
  margin-left: -22rpx;
  transform: scale(0.7);
  font-size: 41.6rpx !important;
}

.close-page {
  display: flex;
  flex-direction: row-reverse;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 3rem;
  background: #f3f5f4;
}

.confirm-btn,
.close-btn {
  position: relative;
  display: flex;
  bottom: -0.6rem;
  width: 4rem !important;
  height: 1.6rem;

  margin-right: 1rem;
}

.close-btn-img {
  position: absolute;
  margin-left: 0.2rem;
  width: 1.5rem;
  height: 1.5rem;
  z-index: 10;
  bottom: -0.01rem;
}

.btn-txt {
  position: absolute;
  padding: 0;
  padding-right: 0.5rem;
  font-size: 32rpx;
  display: block;
  width: 100% !important;
  text-align: right;
  line-height: 1.5rem;
  font-weight: normal;
  border: 0.1rem solid #c5c5c5;
  border-radius: 0.5rem;
}

.star {
  color: #e15a3d;
  font-size: 34rpx;
}

.picker,
.dateTime {
  margin: auto 0.8rem;
}