/* pages/userManageDetail/userManageDetail.wxss */
view {
  font-size: 32rpx;
}

.header-box {
  padding: 1rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333;
}

.avatar {
  width: 5rem;
  height: 5rem;
  border-radius: 50%;
  border: 1px dashed #09c063;
}

.nick {
  margin-top: 0.6rem;
  font-size: 48rpx;
  font-weight: bold;
}

.user-info {
  padding: 0.5rem 1.2rem;
  margin-bottom: 3.5rem;
}

.form-item {
  padding-top: 1rem;
  display: flex;
  font-size: 36rpx;
  color: rgba(102, 102, 102, 1);
}

.form-item-title {
  font-weight: bold;
}

.form-column {
  flex-direction: column;
}

.form-item-bottom {
  margin-bottom: 1rem;
}

.radio {
  margin-left: -22rpx;
  transform: scale(0.7);
  font-size: 41.6rpx !important;
}

.close-page {
  display: flex;
  flex-direction: row-reverse;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 3rem;
  background: #f3f5f4;
}

.confirm-btn,
.close-btn {
  position: relative;
  display: flex;
  bottom: -0.6rem;
  width: 4rem !important;
  height: 1.6rem;
  margin-right: 1rem;
}

.close-btn-img {
  position: absolute;
  margin-left: 0.2rem;
  width: 1.5rem;
  height: 1.5rem;
  z-index: 10;
  bottom: -0.01rem;
}

.btn-txt {
  position: absolute;
  padding: 0;
  padding-right: 0.5rem;
  font-size: 32rpx;
  display: block;
  width: 100% !important;
  text-align: right;
  line-height: 1.5rem;
  font-weight: normal;
  border: 0.1rem solid #c5c5c5;
  border-radius: 0.5rem;
}

.bottom-textarea {
  width: 100%;
  border: 0.1rem solid #dadbda;
}

.cer {
  width: 3rem;
  height: 1.5rem;
  border-radius: 0.5rem;
  line-height: 1.5rem;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}

.success-cer {
  background: #09c063;
}

.fail-cer {
  background: #e15a3d;
}

.star {
  color: #e15a3d;
  font-size: 34rpx;
}