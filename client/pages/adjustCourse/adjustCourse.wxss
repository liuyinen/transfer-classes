view {
  font-size: 32rpx;
}

.main {
  margin: 1rem 0.8rem;
}


.top-title {
  line-height: 34rpx;
  font-size: 38rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  text-align: center;
}

.form-item {
  display: flex;
  flex-flow: column;
}

.star {
  color: #e15a3d;
  font-size: 34rpx;
}

.bottom-input,
.bottom-textarea {
  margin: auto 0.8rem;
  width: 90%;
  font-size: 32rpx;
  font-weight: 500;
}

.bottom-input {
  border-bottom: 2rpx solid #e3e3e3;
}

.bottom-textarea {
  border: 2rpx solid #e3e3e3;
}

.top {
  width: 100%;
  line-height: 120rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
}

.bottom {
  padding-top: 70rpx;
  height: 190rpx;
  overflow-y: hidden;
}

.save-btn {
  width: 100rpx;
  height: 90rpx;
  background: #09c063;
  border-radius: 6rpx;
  line-height: 55rpx;
  font-size: 32rpx;
  color: #ffffff;
}

.radio {
  margin-left: -22rpx;
  transform: scale(0.7);
  font-size: 41.6rpx !important;
}

.picker,
.dateTime {
  margin: auto 0.8rem;
}